layout: none
date: 2013-12-12 00:00:00 +0530
---
<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:taxo="http://purl.org/rss/1.0/modules/taxonomy/" xmlns:media = "http://search.yahoo.com/mrss/" version="2.0">
	<channel>
		<title>{{ site.title }}</title>
		<link>{{ site.url }}</link>
		<description>{{ site.description }}</description>
		<category>Blogs</category>
		<copyright>Uncopyrighted. Free to the world.</copyright>
		<image>
			<url>{{site.url}}/img/Premkumar_Masilamani.jpg</url>
			<title>{{ site.author }}</title>
			<link>{{ site.url }}</link>
		</image>
		<language>en-us</language>
		<managingEditor>{{ site.email }}</managingEditor>
		<webMaster>{{ site.email }}</webMaster>
		<author>{{ site.email }}</author>
		{% for post in site.posts %}
			<item>
				<title>{{ post.title | xml_escape }}</title>
				<link>{{ site.url }}{{ post.url }}</link>
				<description>{{ post.content | xml_escape }}</description>
			{% if post.author != null %}
				<author>{{ post.author }}</author>
			{% else %}
				<author>{{ site.author }}</author>
			{% endif %}
				<category>{{ post.category }}</category>
	  <media:content type="image/jpeg"> 	  
	        <media:title>Grilling Steaks for Summer</media:title>
			<media:description>Get perfectly done steaks every time</media:description>
			<media:thumbnail url="http://upload.wikimedia.org/wikipedia/commons/7/72/MasterCard_early_1990s_logo.png" height="120" width="160"> </media:thumbnail>	  
	  </media:content>
				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
				<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
			</item>
		{% endfor %}
	</channel>
</rss>
